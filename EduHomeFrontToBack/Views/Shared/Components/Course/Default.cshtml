 @model List<Course>
 @foreach (var coruse in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-course">
            <div class="course-img">
                <a href="course-details.html"><img src="~/img/course/@coruse.ImgUrl" alt="course">
                    <div class="course-hover">
                       <i class="fa fa-link"></i>
                    </div>
                </a>
             </div>
            <div class="course-content">
                <h3><a href="course-details.html">@coruse.Title</a></h3>
                <p>@coruse.Description</p>
                <a class="default-btn" href="course-details.html">read more</a>
            </div>   
        </div>
    </div>  
}
 